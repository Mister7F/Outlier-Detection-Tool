<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'/>
        <title>Accueil</title>        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <link rel='stylesheet' href='/static/index.css'>
        <script src='/static/use_case.js'></script>
    </head>

    <body>
        <div class='menu'>
            <div class='checkbox'>
                <input type='text' placeholder='Search' id='search' oninput='show_page(0, page_size.value)'>
                <br> 
                <div><div class="switch">
                    <label><input type="checkbox" onchange='show_page(0, page_size.value)' id='hide_no_out'><span class="lever"></span>Hide no outlier</label>
                </div></div>
                <div><div class="switch">
                    <label><input type="checkbox" onchange='show_page(0, page_size.value)' id='hide_null_std'><span class="lever"></span>Hide one column</label>
                </div></div>      
            </div>
            <h1>{{use_case}}</h1>

            <div class='navigation_panel'>
                <input class='input_page' type='hidden' id='use_case' value='{{use_case}}'>
                <input class='input_page tooltipped' type='text' id='page_size' value='5' onchange='show_page(page_number.value, page_size.value)' data-tooltip='Page size'>
                <input class='input_page tooltipped' type='text' id='page_number' value='0' onchange='show_page(page_number.value, page_size.value)' data-tooltip='Page number'>
                <div class='input_page tooltipped' type='text' id='n_pages' value='0' data-tooltip='Total pages'>0</div>
                <div class='buttons'>
                    <div class='button_page' onclick='show_page(page_number.value - 1, page_size.value)'>Prev</div>
                    <div class='button_page' onclick='show_page(page_number.value -=- 1, page_size.value)'>Next</div>
                    <div class='button_page' onclick='show_page(page_number.value, page_size.value)'>Update</div>
                </div>
            </div>
            
            
        </div>
        
        <div class='plots'>
        	{% for img in imgs %}
                <img src='/imgs/{{use_case}}/{{img[0]}}' outlier='{{img[1]}}' null_std='{{img[2]}}'/>
        	{% endfor %}
        </div>
    </body>
</html>